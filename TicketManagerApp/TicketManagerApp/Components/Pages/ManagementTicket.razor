    private async Task OnLabLocationChanged(ChangeEventArgs e)
    {
        UserTickets = new List<Ticket>();

        if (int.TryParse(e.Value.ToString(), out int labLocationId))
        {
            // set filter global variable
            PickedLabLocationId = labLocationId;

